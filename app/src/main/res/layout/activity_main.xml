<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id = "@+id/main"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Barang : "
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/etNamaBarang"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Input nama barang"
        android:inputType="text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga Barang : "
        android:textSize="24sp"
        android:layout_marginTop="90dp"/>

    <EditText
        android:id="@+id/etHargaBarang"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Input harga barang"
        android:inputType="number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah barang : "
        android:textSize="24sp"
        android:layout_marginTop="180dp"/>

    <EditText
        android:id="@+id/etJumlahBarang"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:hint="Input jumlah barang"
        android:inputType="number"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnTotal"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Total"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="360dp"
        android:width="500dp"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bayar :"
        android:layout_marginTop="380dp"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/etBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="24sp"
        android:inputType="number"
        android:layout_marginTop="420dp"
        android:hint="Input jumlah bayar"
        android:width="500dp"/>

    <Button
        android:id="@+id/btnHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:width="500dp"
        android:textSize="24sp"
        android:layout_marginTop="480dp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembalian :"
        android:textSize="24sp"
        android:layout_marginTop="540dp"/>

    <TextView
        android:id="@+id/tvKembalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:width="500dp"
        android:textAlignment="center"
        android:layout_marginTop="560dp"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="24sp"
        android:width="500dp"
        android:layout_marginTop="600dp"/>

</RelativeLayout>
